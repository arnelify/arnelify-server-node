{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "contracts/*": [ "./src/contracts/*" ],
      "tests/*": [ "./src/tests/*" ],
      "uds/*": [ "./src/uds/*" ],
    },
    "resolveJsonModule": true,
    "outDir": "./pod",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}